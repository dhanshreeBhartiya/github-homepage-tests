{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": false,
      "typeRoots": ["node_modules/@types"],
      "types": ["cypress", "node"],
      "baseUrl": "./",
      "paths": {
        "@integration/*": ["cypress/integration/*"],
        "@fixtures/*": ["cypress/fixtures/*"]
      }
},
"include": [
  "cypress/**/*.ts",
  "cypress/support/*.ts", // Add this to include custom type declarations
  "cypress/support/*.*.ts"
  ]
}
  